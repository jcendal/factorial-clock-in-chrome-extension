{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {},
    "types": ["@types/chrome", "factorial-clock-in"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "nodenext",
      "target": "ES2017"
    }
  },
  "files": ["src/index.ts", "src/background.ts", "src/popup.ts"],
  "include": ["./@types/*.d.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
