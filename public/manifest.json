{
  "manifest_version": 3,
  "name": "Factorial TimeTracker Automation",
  "version": "1.1",
  "description": "A Chrome extension to execute automatice time tracking on Factorial HR",
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "128": "icon-128.png"
    },
    "icon": {
      "16": "icon-16.png",
      "128": "icon-128.png"
    }
  },
  "permissions": ["tabs", "declarativeNetRequestWithHostAccess"],
  "host_permissions": [
    "*://app.factorialhr.com/*",
    "*://api.factorialhr.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
