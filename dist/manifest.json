{
  "manifest_version": 3,
  "name": "Factorial TimeTracker Automation",
  "version": "1.0",
  "description": "A Chrome extension to execute automatice time tracking on Factorial HR",
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "128": "icon-128.png"
    },
    "icon": {
      "16": "icon-16.png",
      "128": "icon-128.png"
    }
  },
  "permissions": ["runtime", "tabs"],
  "host_permissions": ["*://app.factorialhr.com/*"]
}
